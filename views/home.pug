extends layout

mixin message(opp, name)
    if(opp)
        h1.greeting Logged in as 
            span=name 
    else 
        h1.greeting Welcome 
            span=name 
            |  to our website

append links 
    li(style="float: right;")
        a(href="/logout") logout 

block content
    .dashboard 
        .user 
            +message(opp, name)

            br
            br
            h4 Welcome to Mythendium!  Test your knowledge of gods and goddesses of the Mythologies above and see if you can guess the gods displayed!
            br  
            img.center(src="/img/MythendiumLogo_1_70.jpg", alt="Mythendium Logo") 

